job "postgres" {
  region = "${region}"
  datacenters = ["${datacenter}"]
  type        = "service"

  meta {
    version = "1"
  }

  group "db" {
    task "postgres" {
      driver = "podman"

      config {
        image = "${image}"
        volumes = [
          "${shared_dir}postgres:/appdata/postgres",
        ]
        port_map {
          db = 5432
        }
      }

      env {
        POSTGRES_DB       = "postgres"
        POSTGRES_USER     = "postgres"
        POSTGRES_PASSWORD = "${postgres_password}"
        PGDATA            = "/appdata/postgres"
      }

      service {
        name = "postgres"
        tags = ["postgres"]

        port = "db"

        check {
          type     = "tcp"
          port     = "db"
          interval = "30s"
          timeout  = "2s"
        }
      }

      resources {
        network {
          port  "db"  {
            static = "25432"
          }
        }
      }
    }
  }
}
