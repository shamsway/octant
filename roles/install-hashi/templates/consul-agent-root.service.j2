[Unit]
Description=Consul Agent (Root)
Requires=network-online.target tailscaled.service consul-server.service
After=network-online.target tailscaled.service consul-server.service
Documentation="https://www.consul.io/docs/agent/options"

[Service]
Restart=on-failure
ExecStart=/usr/bin/consul agent -config-dir={{ configdirs[name] }} -enable-script-checks
User={{ user }}
Group={{ group }}
ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
KillSignal=SIGINT
LimitNOFILE=65535

[Install]
WantedBy=multi-user.target