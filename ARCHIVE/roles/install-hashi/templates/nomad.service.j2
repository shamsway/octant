[Unit]
Description=nomad agent
Requires=network-online.target tailscaled.service
After=network-online.target tailscaled.service ceph.target mnt-services.mount mnt-recordings.mount
Documentation=https://www.nomadproject.io/docs/agent/options
# When using Nomad with Consul it is not necessary to start Consul first. These
# lines start Consul before Nomad as an optimization to avoid Nomad logging
# that Consul is unavailable at startup.
Wants=consul.service
After=consul.service

[Service]
Restart=on-failure
ExecStart=/usr/bin/nomad agent -config={{configdir}}/nomad.d/
User={{user}}
Group={{group}}
ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
KillSignal=SIGINT
LimitNOFILE=65535
RestartSec=2
StartLimitBurst=3
StartLimitInterval=10
TasksMax=infinity
OOMScoreAdjust=-1000

[Install]
WantedBy=multi-user.target
