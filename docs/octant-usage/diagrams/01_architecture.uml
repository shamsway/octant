@startuml
!pragma teoz true
skinparam dpi 300
skinparam BoxPadding 10
' Dark mode colors
skinparam backgroundColor #2E3440
skinparam ArrowColor #D8DEE9
skinparam BoxBorderColor #D8DEE9
' Font settings
skinparam defaultFontName Arial
skinparam defaultFontSize 14
skinparam defaultFontColor #D8DEE9
skinparam defaultTextAlignment center

' Set diagram size
scale 800*600

' Import Font Awesome

!$ICONURL = "https://raw.githubusercontent.com/tupadr3/plantuml-icon-font-sprites/v3.0.0/icons"
!include $ICONURL/common.puml
!include $ICONURL/font-awesome-6/server.puml
!include $ICONURL/font-awesome-6/database.puml

rectangle "Octant Hybrid Home Lab" #4C566A {

    FA6_SERVER(JerryServer,Jerry, node) {
      rectangle "Nomad" as JerryNomad #2E3440
      rectangle "Consul" as JerryConsul #2E3440
    }

    FA6_SERVER(BobbyServer,Bobby,node) {
      rectangle "Nomad" as BobbyNomad #2E3440
      rectangle "Consul" as BobbyConsul #2E3440
    }

    FA6_SERVER(BillyServer,Billy,node) {
      rectangle "Nomad" as BillyNomad #2E3440
      rectangle "Consul" as BillyConsul #2E3440
    }
    
    rectangle "Cephfs Distributed Storage" #4C566A {
        FA6_DATABASE(Ceph1, "Jerry", node) #2E3440
        FA6_DATABASE(Ceph2, "Bobby", node) #2E3440
        FA6_DATABASE(Ceph3, "Billy", node) #2E3440
    }
}

' Layout adjustments
JerryServer -[hidden]down- Ceph1
BobbyServer -[hidden]down- Ceph2
BillyServer -[hidden]down- Ceph3

@enduml