{% for service in services %}
job "{{ service.name }}" {
  datacenters = ["shamsway"]
  type        = "service"

  group "{{ service.name }}" {
    network {
      port "http" {
        static = {{ service.ports[0].split(':')[1] }}
      }
    }

    volume "{{ service.name }}" {
      type      = "host"
      read_only = false
      source    = "{{ service.name }}"
    }

    task "{{ service.name }}" {
      driver = "podman"

      config {
        image = "{{ service.image }}"
        ports = ["http"]
      }

      volume_mount {
        volume      = "{{ service.name }}"
        destination = "/app"
        read_only   = false
      }

      service {
        name = "{{ service.name }}"
        provider = "consul"
        port = "http"
        tags = [
          "traefik.enable=true",
          "traefik.http.routers.{{ service.name }}.rule=Host(`{{ service.name }}.shamsway.net`)",
          "traefik.http.routers.{{ service.name }}.entrypoints=web,websecure",
          "traefik.http.routers.{{ service.name }}.tls.certresolver=cloudflare",
          "traefik.http.routers.{{ service.name }}.middlewares=redirect-web-to-websecure@internal",
        ]
        check {
          name     = "alive"
          type     = "http"
          path     = "/"
          interval = "10s"
          timeout  = "2s"
        }
      }

      env {
        {% for env in service.environment %}
        {{ env.split('=')[0] }} = "{{ env.split('=')[1] }}"
        {% endfor %}
      }

      resources {
        cpu    = 500
        memory = 256
      }
    }
  }
}
{% endfor %}